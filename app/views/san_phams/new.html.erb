    <style>
        /* General body styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
            color: #333;
        }

        /* Header styling */
        h1 {
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Form styling */
        form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }

        form input, form select, form textarea {
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 1em;
        }

        form button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form button:hover {
            background-color: #0056b3;
        }

        /* Link styling */
        .Back {
            display: inline-block;
            border: 1px solid #ced4da;
            padding: 10px 20px;
            margin: 20px auto;
            color: #007bff;
            text-decoration: none;
            border-radius: 4px;
            background-color: #e9ecef;
            text-align: center;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        .Back:hover {
            background-color: blue;
            color: white;
        }
        .div-buttons {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1>Thêm Sản Phẩm</h1>

    <%= render "form", san_pham: @san_pham %>

    <div class="div-buttons">
        <%= link_to "Trở về", san_phams_path, class: "Back" %>
    </div>
</body>
</html>
