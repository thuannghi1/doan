    <style>
          body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
            color: #333;
        }
        .h {
            color: #007bff;
            text-align: center;
            margin-bottom: 20px;
        }
        .link-button {
            display: inline-block;
            border: 1px solid #ced4da;
            padding: 10px 20px;
            margin: 10px;
            color: #007bff;
            text-decoration: none;
            border-radius: 4px;
            background-color: #e9ecef;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-size: 15px;
            text-align: center;
        }

        .link-button:hover {
            background-color: #007bff;
            color: white;
        }
        .Edit {
            margin-top: 50px;
            margin-left: 20px;
        }

        .Back {
            margin-left: 10px;
        }

        .Destroy {
            margin-left: 30px;
            margin-top: 15px;
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }

        .Destroy:hover {
            background-color: red;
            color: white;
            cursor: pointer;
        }
        form {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }

        form input, form select, form textarea, form button {
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 4px;
            font-size: 1em;
        }
        form button {
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        form button:hover {
            background-color: #0056b3;
        }
        .div-buttons {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h1 class="h">Chỉnh sửa sản phẩm</h1>
    <%= render "form", san_pham: @san_pham %>
    <br>
    <div class="div-buttons">
        <%= link_to "Hiển thị", @san_pham, class: "link-button Edit" %> |
        <%= link_to "Trở về", san_phams_path, class: "link-button Back" %>
    </div>
</body>
</html>
