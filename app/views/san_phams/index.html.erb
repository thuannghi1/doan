<div id="san_phams "style="overflow-y: auto; max-height:640px">
  <% @san_phams.each do |san_pham| %>
 <section class="category">
      <div class="container">
          <div class="category-content">
              <div class="category-content-left">
                  <div class="category-content-left-big-img">
                   <img src="<%= san_pham.AnhMinhHoa %>" alt="">
                     </div>
                  </div>
                  <div class="category-content-right">
                    <div class="category-content-right-name">
                    <h1><%= san_pham.TenSP %></h1>
                  </div>
