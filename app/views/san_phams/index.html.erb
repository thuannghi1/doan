                  </table>
                  <table>
                    <tr><th style="text-align: left; padding-bottom: 10px">Mô tả: <%= san_pham.MoTa %></th></tr>
                   </table>
              </div>
          </div>
      </div>
  </section>
  <div style= "padding-left: 45%" ><%= link_to 'Chỉnh Sửa', edit_san_pham_path(san_pham), class: "Edit" %>
   </div>
