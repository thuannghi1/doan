<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f9;
    margin: 0;
    padding: 0;
}

.form_edit {
    max-width: 800px;
    margin: 50px auto;
    background: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

h1 {
    font-size: 24px;
    color: #333;
    margin-top: 10px;
    text-align: center;
}

hr {
    border: 1px solid #ddd;
    margin: 20px 0;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
}

th, td {
    text-align: left;
    padding: 10px 20px;
}

th {
    background-color: #f9f9f9;
    color: #555;
}

td {
    color: #666;
}

.form-group {
    margin-bottom: 15px;
}

label {
    display: inline-block;
    margin-bottom: 5px;
    font-weight: bold;
}

.form-control {
    width: calc(100% - 40px);
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 14px;
    transition: border-color 0.3s;
}

.form-control:focus {
    border-color: #007bff;
}

textarea.form-control {
    height: 100px;
    resize: vertical;
}

.Edit_canhan {
    display: inline-block;
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.3s;
}

.Edit_canhan:hover {
    background-color: #0056b3;
}

span {
    color: red;
}

.notice {
    color: green;
    text-align: center;
}
</style>

<p style="color: green"><%= notice %></p>
<body>
<%= form_for @profile, url: profile_path(@profile), html: { method: :put, enctype: 'multipart/form-data', class: 'form_edit' } do |f| %>
  <h1 style = "margin-top : 10px; text-align: center">Chỉnh sửa thông tin cá nhân</h1>
  <br>
  <hr>
  <table class="thongtin-edit">
    <tr class="form-group">
      <th><label for="ten_nd">Tên người dùng:</label> <span style="color: red;">*</span></th>
      <td colspan="4"><%= f.text_field :TenND, class: 'form-control', id: 'ten_nd', required: true %></td>
    </tr>
    <tr class="form-group">
        <th><label for="phai">Giới tính: </label></th>
        <td colspan="1">
            <%= f.select :phai_id, options_for_select([['Nam', 1], ['Nữ', 2]]), {}, { class: 'form-control', id: 'phai' } %>
        </td>
    </tr>

    <tr class="form-group">
      <th><label for="email">Email:</label><span style="color: red;">*</span></th>
      <td><%= f.email_field :Email, class: 'form-control', id: 'email', placeholder: 'Nhập Email của bạn', required: true %></td>
      <th><label for="sdt">Số điện thoại:</label><span style="color: red;">*</span></th>
      <td><%= f.number_field :SDT, class: 'form-control', id: 'sdt', min: 0, required: true %></td>
    </tr>
    <tr class="form-group">
      <th><label for="mat_khau">Mật khẩu:</label><span style="color: red;">*</span></th>
      <td><%= f.text_field :MatKhau, class: 'form-control', id: 'mat_khau', required: true %></td>
      <th><label for="loai_quyen"  style="color: red; display:none">Loại quyền:</label></th>
      <td><%= f.hidden_field :quyen_id %></td>
    </tr>
    <tr class="form-group">
      <th><label for="dia_chi">Địa chỉ:</label><span style="color: red;">*</span></th>
      <td colspan="4"><%= f.text_field :DiaChi, class: 'form-control', id: 'dia_chi', required: true %></td>
    </tr>
    <tr class="form-group">
      <td colspan="4"><%= f.submit 'Cập nhật', class: 'Edit_canhan' %></td>
    </tr>
  </table>
<% end %>

</body>