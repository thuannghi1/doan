    <style>
        /* General body styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
            color: #333;
        }

        /* Notification styling */
        p[style*="color: green"] {
            color: green;
            font-weight: bold;
            text-align: center;
        }

        /* Rendered danh muc styling */
        .danh-muc-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px 0;
        }

        /* Link and button styling */
        .link-button, .button-to {
            display: inline-block;
            border: 1px solid #ced4da;
            padding: 10px 20px;
            margin: 10px;
            color: #007bff;
            text-decoration: none;
            border-radius: 4px;
            background-color: #e9ecef;
            transition: background-color 0.3s ease, color 0.3s ease;
            font-size: 15px;
            text-align: center;
        }

        .link-button:hover {
            background-color: #007bff;
            color: white;
        }

        .button-to {
            background-color: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }

        .button-to:hover {
            background-color: #c82333;
            color: white;
        }

        .div-buttons {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <p style="color: green"><%= notice %></p>

    <div class="danh-muc-container">
        <%= render @danh_muc %>
    </div>

    <div class="div-buttons">
      
        <%= link_to "Trở về danh mục", danh_mucs_path, class: 'link-button' %>
        <%= button_to "Xóa", @danh_muc, method: :delete, class: 'button-to' %>
    </div>
</body>
</html>
