<style>
body {
  font-family: 'Roboto', sans-serif;
  background: linear-gradient(to right, #6a11cb, #2575fc);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
 
}

.form_dk {
  background-color: white;
  padding: 30px;
  border-radius: 15px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  width: 700px;
  text-align: center;
}

.form_dk .header {
  font-size: 26px;
  font-weight: 600;
  margin-bottom: 20px;
  color: #333;
}

.thongtin-dangky {
  width: 100%;
  border-collapse: collapse;
}

.thongtin-dangky th {
  text-align: left;
  padding-bottom: 8px;
  font-weight: 500;
  color: black;
  vertical-align: top;
}

.thongtin-dangky td {
  padding-bottom: 15px;
}

.form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  box-sizing: border-box;
  transition: border-color 0.3s;
}

.form-control:focus {
  border-color: #ff758c;
  outline: none;
}

.btn-primary {
  width: 100%;
  padding: 12px;
  background-color: blue;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
  transition: background-color 0.3s;
}

.btn-primary:hover {
   background-color: green;
}

p {
  margin: 0;
}

a {
  color: #ff758c;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}
.return-home {
  display: flex;
  align-items: center;
  margin-top: 20px;
  justify-content: center;
}

.return-home img {
  margin-right: 5px;
}

.return-home a {
  color: #333;
  font-weight: 500;
  transition: color 0.3s;
}

.return-home a:hover {
  color: #ff758c;
}

</style>
<form action="/dang_ky" method="post" enctype="multipart/form-data" class="form_dk">
  <p class="header">ĐĂNG KÝ TÀI KHOẢN</p>
  <table class="thongtin-dangky">
    <tr class="form-group">
      <th><label for="ten_nd">Tên người dùng:</label> <span style="color: red;">*</span></th>
      <td colspan="3"><input type="text" class="form-control" id="ten_nd" name="nguoidung[TenND]" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="phai_id">Giới tính:</label></th>
      <td>
        <select name="nguoidung[phai_id]">
            <option value="1">Nam</option>
            <option value="2">Nữ</option>
        </select>
      </td>
    </tr>
    <tr class="form-group">
      <th><label for="sdt">Số điện thoại:</label><span style="color: red;">*</span></th>
      <td><input type="number" class="form-control" id="sdt" name="nguoidung[SDT]" min="0" required></td>
      <th><label for="email">Email:</label><span style="color: red;">*</span></th>
      <td><input type="email" class="form-control" id="email" name="nguoidung[Email]" placeholder="Nhập Email của bạn" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="mat_khau">Mật khẩu:</label><span style="color: red;">*</span></th>
      <td><input type="password" class="form-control" id="mat_khau" name="nguoidung[MatKhau]" required></td>
    </tr>
    <tr class="form-group">
      <th><label for="dia_chi">Địa chỉ:</label><span style="color: red;">*</span></th>
      <td colspan="3"><input type="text" class="form-control" id="dia_chi" name="nguoidung[DiaChi]" required></td>
    </tr>
    <tr class="form-group">
      <input type="hidden" name="nguoidung[loai_quyen]" value="2">
      <td colspan="4"><button type="submit" class="btn btn-primary">Đăng ký</button></td>
    </tr>
    <tr class="form-group">
      <td colspan="4">
        <p style="text-align: center;">Đã có tài khoản? <a href="#"><%= link_to 'Đăng nhập', dang_nhap_index_path, style:"color: red;"%></a></p>
      </td>
    </tr>
    <tr class="form-group">
      <td colspan="2" style="display: flex; width: 160px; margin-top: 12%;">
        <%= image_tag 'icon/arrow-left.png', width: "15px", height: "15px" %>
        <p style="padding-left: 5px;"><%= link_to 'Về trang chủ', root_path %></p>
      </td>
    </tr>
  </table>
</>